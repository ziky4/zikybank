<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="menuPane" prefHeight="440.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ziky.bank.controller.MenuController">
    <top>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Logout" />
                        <MenuItem mnemonicParsing="false" onAction="#closeApp" text="Exit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Manage">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Clients" />
                        <MenuItem mnemonicParsing="false" onAction="#manageAccounts" text="Accounts" />
                        <MenuItem mnemonicParsing="false" onAction="#manageTransactions" text="Transactions" />
                        <MenuItem mnemonicParsing="false" onAction="#manageEmployees" text="Employees" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
